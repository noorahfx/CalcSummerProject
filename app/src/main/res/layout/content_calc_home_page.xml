<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cfcfc4"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".HomePage.CalcHomePageActivty"
    tools:showIn="@layout/activity_calc_home_page">

    <TextView
        android:id="@+id/home_page_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:text="CalcKalla"
        android:textColor="@color/Black"
        android:textSize="30sp" />

    <Button
        android:id="@+id/basicCalcBtn"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:background="@drawable/red_button"
        android:text="Calculator"
        android:textColor="@color/white"
        android:textSize="13sp" />

    <Button
        android:id="@+id/tipCalculator"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/red_button"
        android:text="Tip Calculator"
        android:textColor="@color/white"
        android:textSize="13sp" />

    <Button
        android:id="@+id/geomtery"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/red_button"
        android:text="Geometry"
        android:textColor="@color/white"
        android:textSize="13sp" />

</LinearLayout>
