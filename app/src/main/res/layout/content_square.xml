<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:auto="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cfcfc4"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Geometry.Square.Square"
    tools:showIn="@layout/activity_square">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/square_perimeter_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Perimeter"
                android:textColor="@color/Black"
                android:textSize="30sp" />

            <ImageView
                android:id="@+id/square_perimeter_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/square_perimeter_text"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:src="@drawable/image1" />

            <io.github.kexanie.library.MathView
                android:id="@+id/square_perimeter_formula"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/square_perimeter_img"
                android:layout_gravity="fill_horizontal"
                android:layout_marginTop="10dp"
                auto:engine="KaTeX">

            </io.github.kexanie.library.MathView>

            <TextView
                android:id="@+id/square_perimeter_a_text"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_below="@id/square_perimeter_formula"
                android:layout_marginTop="11dp"
                android:background="@drawable/red_button"
                android:maxLines="1"
                android:text="a"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/square_perimeter_a_et"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_below="@+id/square_perimeter_formula"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/square_perimeter_a_text"
                android:background="@drawable/black_button"
                android:ems="6"
                android:hint="Enter value"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textColorHint="@color/LightGrey" />





            <Button
                android:id="@+id/square_perimeter_calc_button"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_below="@id/square_perimeter_a_et"
                android:layout_marginTop="5dp"
                android:background="@drawable/black_button"
                android:gravity="center"
                android:text="Calculate"
                android:textColor="@color/white"
                android:textSize="13sp" />


            <TextView
                android:id="@+id/square_perimeter_calc_answer_tx"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_below="@+id/square_perimeter_calc_button"
                android:layout_marginTop="5dp"
                android:background="@drawable/black_button"
                android:gravity="center"
                android:textColor="@color/red"
                android:textSize="21sp" />


            <Button
                android:id="@+id/square_perimeter_clear_button"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_below="@id/square_perimeter_calc_answer_tx"
                android:layout_marginTop="5dp"
                android:background="@drawable/black_button"
                android:text="CLEAR"
                android:textColor="@color/white"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/hline_1"
                style="?android:listSeparatorTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/square_perimeter_clear_button"
                android:layout_marginTop="5dp"  />


            <TextView
                android:id="@+id/square_area_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/hline_1"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Area"
                android:textColor="@color/Black"
                android:textSize="30sp" />



            <ImageView
                android:id="@+id/square_area_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/square_area_text"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:src="@drawable/image1" />

            <io.github.kexanie.library.MathView
                android:id="@+id/square_area_formula"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/square_area_img"
                android:layout_gravity="fill_horizontal"
                android:layout_marginTop="10dp"
                auto:engine="KaTeX">

            </io.github.kexanie.library.MathView>

            <TextView
                android:id="@+id/square_area_a_text"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_below="@id/square_area_formula"
                android:layout_marginTop="11dp"
                android:background="@drawable/red_button"
                android:gravity="center"
                android:maxLines="1"
                android:text="a"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/square_area_a_et"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_below="@+id/square_area_formula"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/square_area_a_text"
                android:background="@drawable/black_button"
                android:ems="6"
                android:hint="Enter value"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textColorHint="@color/LightGrey" />






            <Button
                android:id="@+id/square_area_calc_button"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_below="@id/square_area_a_et"
                android:layout_marginTop="5dp"
                android:background="@drawable/black_button"
                android:gravity="center"
                android:text="Calculate"
                android:textColor="@color/white"
                android:textSize="13sp" />


            <TextView
                android:id="@+id/square_calc_area_answer_tx"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_below="@+id/square_area_calc_button"
                android:layout_marginTop="5dp"
                android:background="@drawable/black_button"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textSize="21sp" />

            <Button
                android:id="@+id/square_area_clear_button"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_below="@id/square_calc_area_answer_tx"
                android:layout_marginTop="5dp"
                android:background="@drawable/black_button"
                android:text="CLEAR"
                android:textColor="@color/white"
                android:textSize="13sp" />



            <TextView
                android:id="@+id/hline_2"
                style="?android:listSeparatorTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/square_area_clear_button"
                android:layout_marginTop="5dp" />


            <TextView
                android:id="@+id/square_side_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/hline_2"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Sides"
                android:textColor="@color/Black"
                android:textSize="30sp" />

            <ImageView
                android:id="@+id/square_side_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/square_side_text"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:src="@drawable/image1" />

            <io.github.kexanie.library.MathView
                android:id="@+id/square_side_formula"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/square_side_img"
                android:layout_gravity="fill_horizontal"
                android:layout_marginTop="10dp"
                auto:engine="KaTeX">

            </io.github.kexanie.library.MathView>


            <TextView
                android:id="@+id/square_side_a_text"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_below="@id/square_side_formula"
                android:layout_marginTop="11dp"
                android:background="@drawable/red_button"
                android:gravity="center"
                android:maxLines="1"
                android:text="A"
                android:textColor="@color/white"
                android:textSize="15sp" />


            <EditText
                android:id="@+id/square_side_a_et"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_below="@+id/square_side_formula"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/square_side_a_text"
                android:background="@drawable/black_button"
                android:ems="6"
                android:hint="Enter Area"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textColorHint="@color/LightGrey" />





            <Button
                android:id="@+id/square_side_calc_button"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_below="@id/square_side_a_et"
                android:layout_marginTop="5dp"
                android:background="@drawable/black_button"
                android:gravity="center"
                android:text="Calculate"
                android:textColor="@color/white"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/square_calc_side_answer_tx"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_below="@+id/square_side_calc_button"
                android:layout_marginTop="5dp"
                android:background="@drawable/black_button"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textSize="21sp" />


            <Button
                android:id="@+id/square_side_clear_button"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_below="@id/square_calc_side_answer_tx"
                android:layout_marginTop="5dp"
                android:background="@drawable/black_button"
                android:text="CLEAR"
                android:textColor="@color/white"
                android:textSize="13sp" />


            <TextView
                android:id="@+id/hline_3"
                style="?android:listSeparatorTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/square_side_clear_button"
                android:layout_marginTop="5dp"  />


            <TextView
                android:id="@+id/square_diagonal_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/hline_3"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Diagonal"
                android:textColor="@color/Black"
                android:textSize="30sp" />


            <ImageView
                android:id="@+id/square_diagonal_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/square_diagonal_text"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:src="@drawable/image1" />

            <io.github.kexanie.library.MathView
                android:id="@+id/square_diagonal_formula"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/square_diagonal_img"
                android:layout_gravity="fill_horizontal"
                android:layout_marginTop="10dp"
                auto:engine="KaTeX">

            </io.github.kexanie.library.MathView>



            <TextView
                android:id="@+id/square_diagonal_d_text"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_below="@id/square_diagonal_formula"
                android:layout_marginTop="11dp"
                android:background="@drawable/red_button"
                android:gravity="center"
                android:maxLines="1"
                android:text="a"
                android:textColor="@color/white"
                android:textSize="15sp" />


            <EditText
                android:id="@+id/square_diagonal_d_et"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_below="@+id/square_diagonal_formula"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/square_diagonal_d_text"
                android:background="@drawable/black_button"
                android:ems="6"
                android:hint="Enter value"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textColorHint="@color/LightGrey" />







            <Button
                android:id="@+id/square_diagonal_calc_button"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_below="@id/square_diagonal_d_et"
                android:layout_marginTop="5dp"
                android:background="@drawable/black_button"
                android:gravity="center"
                android:text="Calculate"
                android:textColor="@color/white"
                android:textSize="13sp" />


            <TextView
                android:id="@+id/square_calc_diagonal_answer_tx"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_below="@+id/square_diagonal_calc_button"
                android:layout_marginTop="5dp"
                android:background="@drawable/black_button"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textSize="21sp" />

            <Button
                android:id="@+id/square_diagonal_clear_button"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_below="@id/square_calc_diagonal_answer_tx"
                android:layout_marginTop="5dp"
                android:background="@drawable/black_button"
                android:text="CLEAR"
                android:textColor="@color/white"
                android:textSize="13sp" />


            <TextView
                android:id="@+id/hline_4"
                style="?android:listSeparatorTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/square_diagonal_clear_button"
                android:layout_marginTop="5dp" />

        </RelativeLayout>
    </ScrollView>


