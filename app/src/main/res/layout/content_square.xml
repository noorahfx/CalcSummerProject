            android:maxLines="1"
            android:textColor="@color/white"
            android:textSize="21sp" />

        <Button
            android:id="@+id/square_side_clear_button"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_below="@id/square_calc_side_answer_tx"
            android:layout_marginTop="5dp"
            android:background="@drawable/black_button"
            android:text="@string/clear"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <View
            android:id="@+id/hline_3"
            android:layout_width="fill_parent"
            android:layout_height="5dp"
            android:layout_below="@id/square_side_clear_button"
            android:layout_marginTop="35dp"
            android:background="@drawable/list_divider" />

        <TextView
            android:id="@+id/square_diagonal_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hline_3"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="@string/diagonal"
            android:textColor="@color/Black"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/square_diagonal_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/square_diagonal_text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:contentDescription="@string/square_image"
            android:src="@drawable/square_xxxhdpi" />

        <ImageView
            android:id="@+id/square_diagonal_formula"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/square_diagonal_img"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:contentDescription="@string/square_diagonal_formula"
            android:src="@drawable/square_diagonal__diagonal_xxxhdpi" />

        <TextView
            android:id="@+id/square_diagonal_d_text"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/square_diagonal_formula"
            android:layout_marginTop="11dp"
            android:background="@drawable/red_button"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/letter_a"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/square_diagonal_d_et"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_below="@+id/square_diagonal_formula"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/square_diagonal_d_text"
            android:layout_toRightOf="@+id/square_diagonal_d_text"
            android:background="@drawable/black_button"
            android:ems="6"
            android:hint="@string/side"
            android:inputType="numberDecimal"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textColorHint="@color/LightGrey" />

        <Button
            android:id="@+id/square_diagonal_calc_button"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_below="@id/square_diagonal_d_et"
            android:layout_marginTop="5dp"
            android:background="@drawable/black_button"
            android:gravity="center"
            android:text="@string/calculate"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/square_calc_diagonal_answer_tx"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_below="@+id/square_diagonal_calc_button"
            android:layout_marginTop="5dp"
            android:background="@drawable/black_button"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textSize="21sp" />

        <Button
            android:id="@+id/square_diagonal_clear_button"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_below="@id/square_calc_diagonal_answer_tx"
            android:layout_marginTop="5dp"
            android:background="@drawable/black_button"
            android:text="@string/clear"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <View
            android:id="@+id/hline_4"
            android:layout_width="fill_parent"
            android:layout_height="5dp"
            android:layout_below="@id/square_diagonal_clear_button"
            android:layout_marginTop="35dp"
            android:background="@drawable/list_divider" />

    </RelativeLayout>

</ScrollView>


