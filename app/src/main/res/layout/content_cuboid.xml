                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cuboid_area_l_et"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/cuboid_area_w_text"
                android:background="@drawable/black_button"
                android:ems="6"
                android:hint="Enter value"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textColorHint="@color/LightGrey"/>

            <TextView
                android:id="@+id/cuboid_area_h_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cuboid_area_w_text"
                android:layout_marginTop="10dp"
                android:text="H"
                android:background="@drawable/red_button"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/cuboid_area_h_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cuboid_area_w_et"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/cuboid_area_w_text"
                android:background="@drawable/black_button"
                android:ems="6"
                android:hint="Enter value"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textColorHint="@color/LightGrey"/>

            <Button
                android:id="@+id/cuboid_area_calc_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cuboid_area_h_text"
                android:layout_marginTop="10dp"
                android:background="@drawable/black_button"
                android:text="Calculate"
                android:textColor="@color/white"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/cuboid_area_calc_answer_tx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cuboid_area_calc_button"
                android:layout_marginTop="10dp"
                android:background="@drawable/black_button"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <Button
                android:id="@+id/cuboid_area_clear_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cuboid_area_calc_answer_tx"
                android:layout_marginTop="10dp"
                android:background="@drawable/black_button"
                android:text="CLEAR"
                android:textColor="@color/white"
                android:textSize="15sp" />



            <TextView
                android:id="@+id/hline_2"
                style="?android:listSeparatorTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/White"
                android:layout_marginTop="10dp"
                android:layout_below="@id/cuboid_area_clear_button"/>

