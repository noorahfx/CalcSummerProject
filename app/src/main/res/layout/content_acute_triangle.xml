            android:maxLines="1"
            android:textColor="@color/white"
            android:textColorHint="@color/LightGrey" />


        <TextView
            android:id="@+id/acute_tri_base_perimeter_tx"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/acute_tri_base_sideC_tx"
            android:layout_marginTop="8dp"
            android:background="@drawable/red_button"
            android:gravity="center"
            android:maxLines="1"
            android:text="P"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/acute_tri_base_perimeter_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/acute_tri_base_sideC_et"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/acute_tri_base_perimeter_tx"
            android:background="@drawable/black_button"
            android:ems="6"
            android:hint="Perimeter"
            android:inputType="numberDecimal"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textColorHint="@color/LightGrey" />


        <Button
            android:id="@+id/acute_tri_base_calc_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/acute_tri_base_perimeter_et"
            android:layout_marginTop="5dp"
            android:background="@drawable/black_button"
            android:gravity="center"
            android:text="Calculate"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/acute_tri_base_ans_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/acute_tri_base_calc_button"
            android:layout_marginTop="5dp"
            android:background="@drawable/black_button"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textSize="21sp" />


        <Button
            android:id="@+id/acute_tri_base_clear_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/acute_tri_base_ans_tv"
            android:layout_marginTop="5dp"
            android:background="@drawable/black_button"
            android:text="CLEAR"
            android:textColor="@color/white"
            android:textSize="13sp" />


        <View
            android:id="@+id/hline_5"
            android:layout_width="fill_parent"
            android:layout_height="5dp"
            android:layout_below="@id/acute_tri_base_clear_button"
            android:layout_marginTop="35dp"
            android:background="@drawable/list_divider" />


    </RelativeLayout>

</ScrollView>



