                android:layout_height="wrap_content"
                android:layout_below="@+id/acute_tri_perimeter_img"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:layout_toRightOf="@+id/acute_tri_perimeter_sideA_tv"
