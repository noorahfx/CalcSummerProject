<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Geometry.Quadrilateral.TypesOfQuadrilateral.Rectangle.Rectangle"
    tools:showIn="@layout/activity_rectangle">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/rectangle_perimeter_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="Perimeter"
                android:textSize="30sp" />

            <ImageView
                android:id="@+id/rectangle_perimeter_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rectangle_perimeter_text"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:src="@drawable/image1" />

            <TextView
                android:id="@+id/rectangle_perimeter_length_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rectangle_perimeter_img"
                android:layout_marginLeft="115dp"
                android:layout_marginTop="40dp"
                android:text="l"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/rectangle_perimeter_length_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rectangle_perimeter_img"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:layout_toRightOf="@+id/rectangle_perimeter_length_text"
                android:ems="5" />

            <TextView
                android:id="@+id/rectangle_perimeter_width_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rectangle_perimeter_length_text"
                android:layout_marginLeft="115dp"
                android:layout_marginTop="32dp"
                android:text="w"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/rectangle_perimeter_width_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rectangle_perimeter_length_et"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/rectangle_perimeter_width_text"
                android:ems="5" />

            <Button
                android:id="@+id/rectangle_perimeter_calc_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rectangle_perimeter_width_text"
                android:layout_marginTop="10dp"
                android:text="Calculate" />

            <TextView
                android:id="@+id/rectangle_perimeter_calc_answer_tx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rectangle_perimeter_calc_button"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textColor="@color/red"
                android:textSize="20sp" />


            <TextView
                android:id="@+id/rectangle_area_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rectangle_perimeter_calc_answer_tx"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="Area"
                android:textSize="30sp" />

            <ImageView
                android:id="@+id/rectangle_area_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rectangle_area_text"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:src="@drawable/image1" />

            <TextView
                android:id="@+id/rectangle_area_length_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rectangle_area_img"
                android:layout_marginLeft="115dp"
                android:layout_marginTop="40dp"
                android:text="l"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/rectangle_area_length_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rectangle_area_img"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:layout_toRightOf="@+id/rectangle_area_length_text"
                android:ems="5" />

            <TextView
                android:id="@+id/rectangle_area_width_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rectangle_area_length_text"
                android:layout_marginLeft="115dp"
                android:layout_marginTop="32dp"
                android:text="w"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/rectangle_area_width_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rectangle_area_length_et"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/rectangle_area_width_text"
                android:ems="5" />

            <Button
                android:id="@+id/rectangle_area_calc_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rectangle_area_width_text"
                android:layout_marginTop="10dp"
                android:text="Calculate" />

            <TextView
                android:id="@+id/rectangle_area_calc_answer_tx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rectangle_area_calc_button"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textColor="@color/red"
                android:textSize="20sp" />


            <TextView
                android:id="@+id/rectangle_length_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rectangle_area_calc_answer_tx"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="Length"
                android:textSize="30sp" />

            <ImageView
                android:id="@+id/rectangle_length_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rectangle_length_text"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:src="@drawable/image1" />

            <TextView
                android:id="@+id/rectangle_length_width_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rectangle_length_img"
                android:layout_marginLeft="115dp"
                android:layout_marginTop="40dp"
                android:text="W"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/rectangle_length_width_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rectangle_length_img"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:layout_toRightOf="@+id/rectangle_length_width_text"
                android:ems="5" />

            <TextView
                android:id="@+id/rectangle_length_perimeter_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rectangle_length_width_text"
                android:layout_marginLeft="115dp"
                android:layout_marginTop="32dp"
                android:text="P"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/rectangle_length_perimeter_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rectangle_length_width_et"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/rectangle_length_perimeter_text"
                android:ems="5" />

            <Button
                android:id="@+id/rectangle_length_calc_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rectangle_length_perimeter_text"
                android:layout_marginTop="10dp"
                android:text="Calculate" />

            <TextView
                android:id="@+id/rectangle_length_calc_answer_tx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rectangle_length_calc_button"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textColor="@color/red"
                android:textSize="20sp" />


            <TextView
                android:id="@+id/rectangle_width_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rectangle_length_calc_answer_tx"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="Width"
                android:textSize="30sp" />

            <ImageView
                android:id="@+id/rectangle_width_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rectangle_width_text"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:src="@drawable/image1" />

            <TextView
                android:id="@+id/rectangle_width_length_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rectangle_width_img"
                android:layout_marginLeft="115dp"
                android:layout_marginTop="40dp"
                android:text="l"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/rectangle_width_length_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rectangle_width_img"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:layout_toRightOf="@+id/rectangle_width_length_text"
                android:ems="5" />

            <TextView
                android:id="@+id/rectangle_width_perimeter_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rectangle_width_length_text"
                android:layout_marginLeft="115dp"
                android:layout_marginTop="32dp"
                android:text="P"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/rectangle_width_perimeter_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rectangle_width_length_et"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/rectangle_width_perimeter_text"
                android:ems="5" />

            <Button
                android:id="@+id/rectangle_width_calc_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rectangle_width_perimeter_text"
                android:layout_marginTop="10dp"
                android:text="Calculate" />

            <TextView
                android:id="@+id/rectangle_width_calc_answer_tx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rectangle_width_calc_button"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textColor="@color/red"
                android:textSize="20sp" />


            <TextView
                android:id="@+id/rectangle_diagonal_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rectangle_width_calc_answer_tx"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="Diagonal"
                android:textSize="30sp" />

            <ImageView
                android:id="@+id/rectangle_diagonal_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rectangle_diagonal_text"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:src="@drawable/image1" />

            <TextView
                android:id="@+id/rectangle_diagonal_length_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rectangle_diagonal_img"
                android:layout_marginLeft="115dp"
                android:layout_marginTop="40dp"
                android:text="l"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/rectangle_diagonal_length_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rectangle_diagonal_img"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:layout_toRightOf="@+id/rectangle_diagonal_length_text"
                android:ems="5" />

            <TextView
                android:id="@+id/rectangle_diagonal_width_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rectangle_diagonal_length_text"
                android:layout_marginLeft="115dp"
                android:layout_marginTop="32dp"
                android:text="w"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/rectangle_diagonal_width_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rectangle_diagonal_length_et"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/rectangle_diagonal_width_text"
                android:ems="5" />

            <Button
                android:id="@+id/rectangle_diagonal_calc_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rectangle_diagonal_width_text"
                android:layout_marginTop="10dp"
                android:text="Calculate" />

            <TextView
                android:id="@+id/rectangle_diagonal_calc_answer_tx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rectangle_diagonal_calc_button"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textColor="@color/red"
                android:textSize="20sp" />


        </RelativeLayout>
    </ScrollView>


</RelativeLayout>















