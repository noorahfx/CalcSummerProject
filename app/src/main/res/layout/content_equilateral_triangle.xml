<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:auto="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cfcfc4"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="calcpa.calcsummerproject.Geometry.Triangle.TypesOfTriangle.EquilateralTriangle"
    tools:showIn="@layout/activity_equilateral_triangle"
    android:scrollbarThumbVertical="@drawable/scrollbar">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/equi_triangle_perimeter_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Perimeter"
            android:textColor="@color/Black"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/equi_triangle_perimeter_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/equi_triangle_perimeter_text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:src="@drawable/equilateral_triangle_xxxhdpi" />


        <ImageView
            android:id="@+id/equi_triangle_perimeter_formula"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/equi_triangle_perimeter_img"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:src="@drawable/equilateral_triangle_perimeter_xxxhdpi" />


         <TextView
            android:id="@+id/equi_triangle_perimeter_sideA_tv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/equi_triangle_perimeter_formula"
            android:layout_marginTop="11dp"
            android:background="@drawable/red_button"
            android:gravity="center"
            android:maxLines="1"
            android:text="a"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/equi_triangle_perimeter_sideA_et"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_below="@+id/equi_triangle_perimeter_formula"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/equi_triangle_perimeter_sideA_tv"
            android:background="@drawable/black_button"
            android:ems="6"
            android:hint="Side"
            android:inputType="numberDecimal"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textColorHint="@color/LightGrey" />



        <Button
            android:id="@+id/equi_triangle_perimeter_calc_button"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_below="@+id/equi_triangle_perimeter_sideA_et"
            android:layout_marginTop="5dp"
            android:background="@drawable/black_button"
            android:gravity="center"
            android:text="Calculate"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/equi_triangle_perimeter_ans_tv"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_below="@+id/equi_triangle_perimeter_calc_button"
            android:layout_marginTop="5dp"
            android:background="@drawable/black_button"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="21sp" />


        <Button
            android:id="@+id/equi_triangle_perimeter_clear_button"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_below="@id/equi_triangle_perimeter_ans_tv"
            android:layout_marginTop="5dp"
            android:background="@drawable/black_button"
            android:text="CLEAR"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <View
            android:id="@+id/hline_1"
            android:layout_width="fill_parent"
            android:layout_height="5dp"
            android:background="@drawable/list_divider"
            android:layout_below="@id/equi_triangle_perimeter_clear_button"
            android:layout_marginTop="35dp" />






        <TextView
            android:id="@+id/equi_triangle_area_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hline_1"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Area"
            android:textColor="@color/Black"
            android:textSize="30sp" />


        <ImageView
            android:id="@+id/equi_triangle_area_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/equi_triangle_area_text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:src="@drawable/equilateral_triangle_xxxhdpi" />

        <ImageView
            android:id="@+id/equi_triangle_area_formula"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/equi_triangle_area_img"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:src="@drawable/equilateral_triangle_area_xxxhdpi" />



        <TextView
            android:id="@+id/equi_triangle_area_sideA_tv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/equi_triangle_area_formula"
            android:layout_marginTop="11dp"
            android:background="@drawable/red_button"
            android:gravity="center"
            android:maxLines="1"
            android:text="a"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/equi_triangle_area_sideA_et"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_below="@+id/equi_triangle_area_formula"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/equi_triangle_area_sideA_tv"
            android:background="@drawable/black_button"
            android:ems="6"
            android:hint="Side"
            android:inputType="numberDecimal"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textColorHint="@color/LightGrey" />



        <Button
            android:id="@+id/equi_triangle_area_calc_button"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_below="@+id/equi_triangle_area_sideA_et"
            android:layout_marginTop="5dp"
            android:background="@drawable/black_button"
            android:gravity="center"
            android:text="Calculate"
            android:textColor="@color/white"
            android:textSize="13sp" />


        <TextView
            android:id="@+id/equi_triangle_area_ans_tv"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_below="@+id/equi_triangle_area_calc_button"
            android:layout_marginTop="5dp"
            android:background="@drawable/black_button"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textSize="21sp" />

        <Button
            android:id="@+id/equi_tri_area_clear_button"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_below="@id/equi_triangle_area_ans_tv"
            android:layout_marginTop="5dp"
            android:background="@drawable/black_button"
            android:text="CLEAR"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <View
            android:id="@+id/hline_2"
            android:layout_width="fill_parent"
            android:layout_height="5dp"
            android:background="@drawable/list_divider"
            android:layout_below="@id/equi_tri_area_clear_button"
            android:layout_marginTop="35dp" />



         <TextView
            android:id="@+id/equi_triangle_side_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hline_2"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Side A"
            android:textColor="@color/Black"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/equi_triangle_side_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/equi_triangle_side_text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:src="@drawable/equilateral_triangle_xxxhdpi" />

        <ImageView
            android:id="@+id/equi_triangle_side_formula"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/equi_triangle_side_img"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:src="@drawable/equilateral_triangle_sides_xxxhdpi" />



        <TextView
            android:id="@+id/equi_triangle_side_perimeter_tv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/equi_triangle_side_formula"
            android:layout_marginTop="11dp"
            android:background="@drawable/red_button"
            android:gravity="center"
            android:maxLines="1"
            android:text="p"
            android:textColor="@color/white"
            android:textSize="15sp" />




        <EditText
            android:id="@+id/equi_triangle_side_perimeter_et"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_below="@+id/equi_triangle_side_formula"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/equi_triangle_side_perimeter_tv"
            android:background="@drawable/black_button"
            android:ems="6"
            android:hint="Perimeter"
            android:inputType="numberDecimal"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textColorHint="@color/LightGrey" />



        <Button
            android:id="@+id/equi_triangle_side_calc_button"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_below="@+id/equi_triangle_side_perimeter_et"
            android:layout_marginTop="5dp"
            android:background="@drawable/black_button"
            android:gravity="center"
            android:text="Calculate"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/equi_triangle_side_ans_tv"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_below="@+id/equi_triangle_side_calc_button"
            android:layout_marginTop="5dp"
            android:background="@drawable/black_button"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textSize="21sp" />

        <Button
            android:id="@+id/equi_tri_hyp_clear_button"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_below="@id/equi_triangle_side_ans_tv"
            android:layout_marginTop="5dp"
            android:background="@drawable/black_button"
            android:text="CLEAR"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <View
            android:id="@+id/hline_3"
            android:layout_width="fill_parent"
            android:layout_height="5dp"
            android:background="@drawable/list_divider"
            android:layout_below="@id/equi_tri_hyp_clear_button"
            android:layout_marginTop="35dp" />



    </RelativeLayout>

</ScrollView>


