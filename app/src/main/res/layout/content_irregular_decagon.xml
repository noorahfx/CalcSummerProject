<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="calcpa.calcsummerproject.Geometry.Decagon.TypesOfDecagon.IrregularDecagon"
    tools:showIn="@layout/activity_irregular_decagon">

    <TextView
        android:id="@+id/side_c_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hline_2"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="Hypotenuse "
        android:textColor="@color/Black"
        android:textSize="30sp" />


    <ImageView
        android:id="@+id/side_c_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/side_c_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:src="@drawable/image1" />

    <TextView
        android:id="@+id/hyp_side_a_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/side_c_img"
        android:layout_marginTop="40dp"
        android:background="@drawable/red_button"
        android:maxLines="1"
        android:text="a"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/hyp_side_b_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/hyp_side_a_tv"
        android:layout_marginTop="10dp"
        android:background="@drawable/red_button"
        android:maxLines="1"
        android:text="b"
        android:textColor="@color/white"
        android:textSize="18sp" />


    <EditText
        android:id="@+id/hyp_side_a_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/side_c_img"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="40dp"
        android:layout_toRightOf="@+id/hyp_side_a_tv"
        android:background="@drawable/black_button"
        android:ems="6"
        android:hint="Enter value"
        android:inputType="numberDecimal"
        android:maxLines="1"
        android:textColor="@color/white"
        android:textColorHint="@color/LightGrey" />

    <EditText
        android:id="@+id/hyp_side_b_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/hyp_side_a_et"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/hyp_side_b_tv"
        android:background="@drawable/black_button"
        android:ems="6"
        android:hint="Enter value"
        android:inputType="numberDecimal"
        android:maxLines="1"
        android:textColor="@color/white"
        android:textColorHint="@color/LightGrey" />


    <Button
        android:id="@+id/hyp_calculate_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hyp_side_b_tv"
        android:layout_marginTop="10dp"
        android:background="@drawable/black_button"
        android:text="Calculate"
        android:textColor="@color/white"
        android:textSize="15sp" />


    <TextView
        android:id="@+id/hyp_answer_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hyp_calculate_button"
        android:layout_marginTop="10dp"
        android:background="@drawable/black_button"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <Button
        android:id="@+id/right_triangle_hyp_clear_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/hyp_answer_tv"
        android:layout_marginTop="10dp"
        android:background="@drawable/black_button"
        android:text="CLEAR"
        android:textColor="@color/white"
        android:textSize="15sp" />


    <TextView
        android:id="@+id/hline_3"
        style="?android:listSeparatorTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/right_triangle_hyp_clear_button"
        android:layout_marginTop="10dp"
        android:textColor="@color/White" />

</RelativeLayout>
