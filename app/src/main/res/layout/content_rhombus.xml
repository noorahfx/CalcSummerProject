<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Geometry.Quadrilateral.TypesOfQuadrilateral.Rhombus.Rhombus"
    tools:showIn="@layout/activity_rhombus">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/rhombus_perimeter_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="Perimeter"
                android:textSize="30sp" />

            <ImageView
                android:id="@+id/rhombus_perimeter_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rhombus_perimeter_text"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:src="@drawable/image1" />

            <TextView
                android:id="@+id/rhombus_perimeter_a_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rhombus_perimeter_img"
                android:layout_marginLeft="115dp"
                android:layout_marginTop="40dp"
                android:text="a"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/rhombus_perimeter_a_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rhombus_perimeter_img"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:layout_toRightOf="@+id/rhombus_perimeter_a_text"
                android:ems="5"
                android:inputType="numberDecimal" />


            <Button
                android:id="@+id/rhombus_perimeter_calc_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rhombus_perimeter_a_text"
                android:layout_marginTop="10dp"
                android:text="Calculate" />

            <TextView
                android:id="@+id/rhombus_perimeter_calc_answer_tx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rhombus_perimeter_calc_button"
                android:layout_marginTop="10dp"
                android:gravity="center"

                android:textColor="@color/red"
                android:textSize="20sp" />


            <TextView
                android:id="@+id/rhombus_area_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rhombus_perimeter_calc_answer_tx"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="Area"
                android:textSize="30sp" />

            <ImageView
                android:id="@+id/rhombus_area_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rhombus_area_text"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:src="@drawable/image1" />

            <TextView
                android:id="@+id/rhombus_area_p_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rhombus_area_img"
                android:layout_marginLeft="115dp"
                android:layout_marginTop="40dp"
                android:text="p"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/rhombus_area_p_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rhombus_area_img"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:layout_toRightOf="@+id/rhombus_area_p_text"
                android:ems="5"
                android:inputType="numberDecimal" />

            <TextView
                android:id="@+id/rhombus_area_q_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rhombus_area_p_text"
                android:layout_marginLeft="115dp"
                android:layout_marginTop="32dp"
                android:text="q"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/rhombus_area_q_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rhombus_area_p_et"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/rhombus_area_q_text"
                android:ems="5"
                android:inputType="numberDecimal" />

            <Button
                android:id="@+id/rhombus_area_calc_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rhombus_area_q_text"
                android:layout_marginTop="10dp"
                android:text="Calculate" />

            <TextView
                android:id="@+id/rhombus_area_calc_answer_tx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rhombus_area_calc_button"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textColor="@color/red"
                android:textSize="20sp" />


            <TextView
                android:id="@+id/rhombus_sides_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rhombus_area_calc_answer_tx"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="Sides"
                android:textSize="30sp" />

            <ImageView
                android:id="@+id/rhombus_sides_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rhombus_sides_text"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:src="@drawable/image1" />

            <TextView
                android:id="@+id/rhombus_sides_perimeter_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rhombus_sides_img"
                android:layout_marginLeft="115dp"
                android:layout_marginTop="40dp"
                android:text="P"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/rhombus_sides_perimeter_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rhombus_sides_img"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:layout_toRightOf="@+id/rhombus_sides_perimeter_text"
                android:ems="5"
                android:inputType="numberDecimal" />


            <Button
                android:id="@+id/rhombus_sides_calc_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rhombus_sides_perimeter_text"
                android:layout_marginTop="10dp"
                android:text="Calculate" />

            <TextView
                android:id="@+id/rhombus_sides_calc_answer_tx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rhombus_sides_calc_button"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textColor="@color/red"
                android:textSize="20sp" />


            <TextView
                android:id="@+id/rhombus_p_diagonal_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rhombus_sides_calc_answer_tx"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="Diagonal P"
                android:textSize="30sp" />

            <ImageView
                android:id="@+id/rhombus_p_diagonal_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rhombus_p_diagonal_text"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:src="@drawable/image1" />

            <TextView
                android:id="@+id/rhombus_p_diagonal_q_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rhombus_p_diagonal_img"
                android:layout_marginLeft="115dp"
                android:layout_marginTop="40dp"
                android:text="q"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/rhombus_p_diagonal_q_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rhombus_p_diagonal_img"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:layout_toRightOf="@+id/rhombus_p_diagonal_q_text"
                android:ems="5"
                android:inputType="numberDecimal" />

            <TextView
                android:id="@+id/rhombus_p_diagonal_area_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rhombus_p_diagonal_q_text"
                android:layout_marginLeft="115dp"
                android:layout_marginTop="32dp"
                android:text="A"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/rhombus_p_diagonal_area_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rhombus_p_diagonal_q_et"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/rhombus_p_diagonal_area_text"
                android:ems="5"
                android:inputType="numberDecimal" />

            <Button
                android:id="@+id/rhombus_p_diagonal_calc_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rhombus_p_diagonal_area_text"
                android:layout_marginTop="10dp"
                android:text="Calculate" />

            <TextView
                android:id="@+id/rhombus_p_diagonal_calc_answer_tx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rhombus_p_diagonal_calc_button"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textColor="@color/red"
                android:textSize="20sp" />


            <TextView
                android:id="@+id/rhombus_q_diagonal_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rhombus_p_diagonal_calc_answer_tx"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="Diagonal Q"
                android:textSize="30sp" />

            <ImageView
                android:id="@+id/rhombus_q_diagonal_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rhombus_q_diagonal_text"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:src="@drawable/image1" />

            <TextView
                android:id="@+id/rhombus_q_diagonal_p_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rhombus_q_diagonal_img"
                android:layout_marginLeft="115dp"
                android:layout_marginTop="40dp"
                android:text="p"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/rhombus_q_diagonal_p_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rhombus_q_diagonal_img"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:layout_toRightOf="@+id/rhombus_q_diagonal_p_text"
                android:ems="5"
                android:inputType="numberDecimal" />

            <TextView
                android:id="@+id/rhombus_q_diagonal_area_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rhombus_q_diagonal_p_text"
                android:layout_marginLeft="115dp"
                android:layout_marginTop="32dp"
                android:text="A"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/rhombus_q_diagonal_area_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rhombus_q_diagonal_p_et"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/rhombus_q_diagonal_area_text"
                android:ems="5"
                android:inputType="numberDecimal" />

            <Button
                android:id="@+id/rhombus_q_diagonal_calc_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rhombus_q_diagonal_area_text"
                android:layout_marginTop="10dp"
                android:text="Calculate" />

            <TextView
                android:id="@+id/rhombus_q_diagonal_calc_answer_tx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rhombus_q_diagonal_calc_button"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textColor="@color/red"
                android:textSize="20sp" />


        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
