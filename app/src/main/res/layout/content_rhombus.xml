        <ImageView
            android:id="@+id/rhombus_p_diagonal_formula"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rhombus_p_diagonal_img"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:src="@drawable/circle_area_xxxhdpi" />





        <TextView
            android:id="@+id/rhombus_p_diagonal_q_text"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/rhombus_p_diagonal_formula"
            android:layout_marginTop="11dp"
            android:background="@drawable/red_button"
            android:gravity="center"
            android:maxLines="1"
            android:text="q"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/rhombus_p_diagonal_q_et"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_below="@+id/rhombus_p_diagonal_formula"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/rhombus_p_diagonal_q_text"
            android:background="@drawable/black_button"
            android:ems="6"
            android:hint="Enter value"
            android:inputType="numberDecimal"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textColorHint="@color/LightGrey" />

        <TextView
            android:id="@+id/rhombus_p_diagonal_area_text"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/rhombus_p_diagonal_q_text"
            android:layout_marginTop="7dp"
            android:background="@drawable/red_button"
            android:gravity="center"
            android:maxLines="1"
            android:text="A"
            android:textColor="@color/white"
            android:textSize="15sp" />


        <EditText
            android:id="@+id/rhombus_p_diagonal_area_et"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_below="@+id/rhombus_p_diagonal_q_et"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/rhombus_p_diagonal_area_text"
            android:background="@drawable/black_button"
            android:ems="6"
            android:hint="Enter Area"
            android:inputType="numberDecimal"
            android:maxLines="1"
            android:textColor="@color/white"
