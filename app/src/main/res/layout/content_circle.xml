<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_orange_xxxhdpi"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="calcpa.calcsummerproject.Geometry.Circle.Circle"
    tools:showIn="@layout/activity_circle">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/circle_area_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="Area"
                android:textSize="30sp"
                android:textColor="@color/Black"/>

            <ImageView
                android:id="@+id/circle_area_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/circle_area_text"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:src="@drawable/image1" />

            <TextView
                android:id="@+id/circle_area_a_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/circle_area_img"
                android:layout_marginTop="40dp"

                android:background="@drawable/red_button"
                android:maxLines="1"
                android:text="r"
                android:textColor="@color/white"
                android:textSize="18sp"

                />

            <EditText
                android:id="@+id/circle_area_a_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/circle_area_img"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="40dp"
                android:layout_toRightOf="@+id/circle_area_a_text"
                android:background="@drawable/red_button"
                android:ems="6"
                android:hint="Enter value"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textColorHint="@color/LightGrey"

                />


            <Button
                android:id="@+id/circle_area_calc_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/circle_area_a_text"
                 android:layout_marginTop="10dp"
                android:background="@drawable/red_button"
                android:text="Calculate"
                android:textColor="@color/white"
                android:textSize="15sp" />



            <TextView
                android:id="@+id/circle_calc_answer_tx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/circle_area_calc_button"
                android:layout_marginTop="10dp"

                android:background="@drawable/red_button"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textSize="18sp" />
            <Button
                android:id="@+id/circle_area_clear_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/circle_calc_answer_tx"
                android:layout_marginTop="10dp"
                android:background="@drawable/red_button"
                android:text="CLEAR"
                android:textColor="@color/white"
                android:textSize="15sp" />



            <TextView
                android:id="@+id/testing"
                style="?android:listSeparatorTextViewStyle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/DarkRed"
                 android:layout_marginTop="10dp"
                android:layout_below="@id/circle_area_clear_button"/>



            <TextView
                android:id="@+id/circle_diameter_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/testing"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:text="Diameter"
                android:textSize="30sp"
                android:textColor="@color/Black"

                />

            <ImageView
                android:id="@+id/circle_diameter_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/circle_diameter_text"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:src="@drawable/image1" />

            <TextView
                android:id="@+id/circle_diameter_d_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/circle_diameter_img"
                 android:layout_marginTop="40dp"
                android:background="@drawable/red_button"
                android:text="r"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/circle_diameter_d_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/circle_diameter_img"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="40sp"
                android:layout_toRightOf="@+id/circle_diameter_d_text"
                android:background="@drawable/red_button"
                android:ems="6"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:hint="Enter value"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textColorHint="@color/LightGrey"

                />

            <Button
                android:id="@+id/circle_diameter_calc_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/circle_diameter_d_text"
                 android:layout_marginTop="10dp"
                android:background="@drawable/red_button"
                android:text="Calculate"
                android:textColor="@color/white"
                android:textSize="15sp" />



            <TextView
                android:id="@+id/circle_calc_diamter_answer_tx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/circle_diameter_calc_button"
                android:layout_marginTop="10dp"
                android:background="@drawable/red_button"
                android:gravity="center"
                android:textColor="@color/red"
                android:textSize="18sp" />

            <Button
                android:id="@+id/circle_diameter_clear_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/circle_calc_diamter_answer_tx"
                 android:layout_marginTop="10dp"
                 android:background="@drawable/red_button"
                android:text="CLEAR"
                android:textColor="@color/white"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/circle_circum_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/circle_diameter_clear_button"
                android:gravity="center"
                android:text="Circumference"
                android:textSize="30sp"
                android:layout_marginTop="30dp"
                android:textColor="@color/Black"
                />

            <ImageView
                android:id="@+id/circle_circum_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/circle_circum_text"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"
                android:src="@drawable/image1" />

            <TextView
                android:id="@+id/circle_circum_c_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/circle_circum_img"
                 android:layout_marginTop="40dp"
                android:background="@drawable/red_button"
                android:text="r"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/circle_circum_c_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/circle_circum_img"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="40dp"
                android:layout_toRightOf="@+id/circle_circum_c_text"
                android:background="@drawable/red_button"
                android:ems="6"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:hint="Enter value"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textColorHint="@color/LightGrey" />

            <Button
                android:id="@+id/circle_circum_calc_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/circle_circum_c_text"
                android:layout_marginTop="10dp"
                 android:background="@drawable/red_button"
                android:text="Calculate"
                android:textSize="15sp"
                android:textColor="@color/white" />




            <TextView
                android:id="@+id/circle_circum_calc_answer_tx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/circle_circum_calc_button"
                android:layout_marginTop="10dp"
                android:background="@drawable/red_button"
                android:gravity="center"
                android:textColor="@color/red"
                android:textSize="18sp" />

            <Button
                android:id="@+id/circle_circum_clear_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/circle_circum_calc_answer_tx"
                 android:layout_marginTop="10dp"
                 android:text="CLEAR"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:background="@drawable/red_button"/>


            <TextView
                android:id="@+id/circle_radius_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/circle_circum_clear_button"
                android:gravity="center"
                android:text="Radius"
                android:textSize="30sp"
                android:layout_marginTop="30dp"
                android:textColor="@color/Black"/>

            <ImageView
                android:id="@+id/circle_radius_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/circle_radius_text"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"
                android:src="@drawable/image1" />

            <TextView
                android:id="@+id/circle_radius_c_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/circle_radius_img"
                 android:layout_marginTop="40dp"
                android:background="@drawable/red_button"
                android:text="A"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/circle_radius_c_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/circle_radius_img"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="40dp"
                android:layout_toRightOf="@+id/circle_radius_c_text"
                android:background="@drawable/red_button"
                android:ems="6"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:hint="Enter value"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textColorHint="@color/LightGrey" />

            <Button
                android:id="@+id/circle_radius_calc_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/circle_radius_c_text"
                android:layout_marginTop="10dp"
                 android:background="@drawable/red_button"
                android:text="Calculate"
                android:textSize="15sp"
                android:textColor="@color/white" />

            <TextView

                android:id="@+id/circle_radius_calc_answer_tx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/circle_radius_calc_button"
                android:layout_marginTop="10dp"
                android:background="@drawable/red_button"
                android:gravity="center"
                android:textColor="@color/red"
                android:textSize="18sp" />

            <Button
                android:id="@+id/circle_radius_clear_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/circle_radius_calc_answer_tx"
                 android:layout_marginTop="10dp"
                 android:text="CLEAR"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:background="@drawable/red_button"/>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
