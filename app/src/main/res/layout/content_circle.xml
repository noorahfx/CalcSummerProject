<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:auto="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cfcfc4"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="calcpa.calcsummerproject.Geometry.Circle.Circle"
    tools:showIn="@layout/activity_circle">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/circle_area_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="@string/area_text"
            android:textColor="@color/Black"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/circle_area_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/circle_area_text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:src="@drawable/image1" />

        <io.github.kexanie.library.MathView
            android:id="@+id/areaFormula"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/circle_area_img"
            android:layout_gravity="fill_horizontal"
            android:layout_marginTop="10dp"
            auto:engine="KaTeX">
            
        </io.github.kexanie.library.MathView>

 
        <TextView
            android:id="@+id/circle_area_a_text"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/areaFormula"
            android:layout_marginTop="11dp"
            android:background="@drawable/red_button"
            android:maxLines="1"
            android:text="r"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="15sp" />


         <EditText
            android:id="@+id/circle_area_a_et"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_below="@+id/areaFormula"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/circle_area_a_text"
            android:background="@drawable/black_button"
            android:ems="6"
            android:hint="Enter Radius"
            android:inputType="numberDecimal"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textColorHint="@color/LightGrey" />



        <Button

            android:id="@+id/circle_area_calc_button"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_below="@id/circle_area_a_et"
            android:layout_marginTop="5dp"
            android:background="@drawable/black_button"
            android:gravity="center"
            android:text="Calculate"
            android:textColor="@color/white"
            android:textSize="13sp" />


        <TextView
            android:id="@+id/circle_calc_answer_tx"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_below="@+id/circle_area_calc_button"
            android:layout_marginTop="5dp"
            android:background="@drawable/black_button"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textSize="21sp" />

        <Button

            android:id="@+id/circle_area_clear_button"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_below="@id/circle_calc_answer_tx"
            android:layout_marginTop="5dp"
            android:background="@drawable/black_button"
            android:text="CLEAR"
            android:textColor="@color/white"
            android:textSize="13sp" />


        <TextView
            android:id="@+id/hline_1"
            style="?android:listSeparatorTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/circle_area_clear_button"
            android:layout_marginTop="5dp" />


        <TextView
            android:id="@+id/circle_diameter_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hline_1"
            android:layout_marginTop="10dp"
            android:textColor="@color/Black"
            android:gravity="center"
            android:text="Diameter"
             android:textSize="30sp" />

        <ImageView
            android:id="@+id/circle_diameter_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/circle_diameter_text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:src="@drawable/image1" />

        <io.github.kexanie.library.MathView
            android:id="@+id/circle_diameter_formula"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/circle_diameter_img"
            android:layout_gravity="fill_horizontal"
            android:layout_marginTop="10dp"
            auto:engine="KaTeX">

        </io.github.kexanie.library.MathView>

         <TextView
            android:id="@+id/circle_diameter_d_text"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/circle_diameter_formula"
            android:layout_marginTop="11dp"
            android:background="@drawable/red_button"
            android:maxLines="1"
            android:text="r"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="15sp" />


        <EditText
            android:id="@+id/circle_diameter_d_et"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_below="@id/circle_diameter_formula"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10sp"
            android:layout_toRightOf="@+id/circle_diameter_d_text"
            android:background="@drawable/black_button"
            android:ems="6"
            android:hint="Enter Radius"
            android:inputType="numberDecimal"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textColorHint="@color/LightGrey" />

        <Button
            android:id="@+id/circle_diameter_calc_button"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_below="@id/circle_diameter_d_et"
            android:layout_marginTop="5dp"
            android:background="@drawable/black_button"
            android:text="Calculate"
            android:textColor="@color/white"
            android:textSize="13sp" />


        <TextView
            android:id="@+id/circle_calc_diamter_answer_tx"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_below="@+id/circle_diameter_calc_button"
            android:layout_marginTop="5dp"
            android:background="@drawable/black_button"
            android:gravity="center"
            android:textColor="@color/White"
            android:textSize="21sp" />

        <Button
            android:id="@+id/circle_diameter_clear_button"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_below="@id/circle_calc_diamter_answer_tx"
            android:layout_marginTop="5dp"
            android:background="@drawable/black_button"
            android:text="CLEAR"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/hline_2"
            style="?android:listSeparatorTextViewStyle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/circle_diameter_clear_button"
            android:layout_marginTop="5dp" />


        <TextView
            android:id="@+id/circle_circum_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hline_2"
            android:layout_marginTop="10dp"
            android:textColor="@color/Black"
            android:gravity="center"
            android:text="Circumference"
             android:textSize="30sp" />

        <ImageView
            android:id="@+id/circle_circum_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/circle_circum_text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:src="@drawable/image1" />

        <io.github.kexanie.library.MathView
            android:id="@+id/circle_circum_formula"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/circle_circum_img"
            android:layout_gravity="fill_horizontal"
            android:layout_marginTop="10dp"
            auto:engine="KaTeX">

        </io.github.kexanie.library.MathView>


        <TextView
            android:id="@+id/circle_circum_c_text"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/circle_circum_formula"
            android:layout_marginTop="11dp"
            android:background="@drawable/red_button"
            android:maxLines="1"
            android:text="r"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="15sp" />


        <EditText
            android:id="@+id/circle_circum_c_et"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_below="@id/circle_circum_formula"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/circle_circum_c_text"
            android:background="@drawable/black_button"
            android:ems="6"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:hint="Enter Radius"
            android:inputType="numberDecimal"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textColorHint="@color/LightGrey" />

        <Button
            android:id="@+id/circle_circum_calc_button"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_below="@id/circle_circum_c_et"
            android:layout_marginTop="5dp"
            android:background="@drawable/black_button"
            android:text="Calculate"
            android:textColor="@color/white"
            android:textSize="13sp" />


        <TextView
            android:id="@+id/circle_circum_calc_answer_tx"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_below="@+id/circle_circum_calc_button"
            android:layout_marginTop="5dp"
            android:background="@drawable/black_button"
            android:gravity="center"
            android:textColor="@color/White"
            android:textSize="21sp" />

        <Button
            android:id="@+id/circle_circum_clear_button"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_below="@id/circle_circum_calc_answer_tx"
            android:layout_marginTop="5dp"
            android:background="@drawable/black_button"
            android:text="CLEAR"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/hline_3"
            style="?android:listSeparatorTextViewStyle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/circle_circum_clear_button"
            android:layout_marginTop="5dp" />

        <TextView
            android:id="@+id/circle_radius_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hline_3"
            android:layout_marginTop="10dp"
            android:textColor="@color/Black"
            android:gravity="center"
            android:text="Radius"
             android:textSize="30sp" />

        <ImageView
            android:id="@+id/circle_radius_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/circle_radius_text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:src="@drawable/image1" />

        <io.github.kexanie.library.MathView
            android:id="@+id/circle_radius_formula"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/circle_radius_img"
            android:layout_gravity="fill_horizontal"
            android:layout_marginTop="10dp"
            auto:engine="KaTeX">

        </io.github.kexanie.library.MathView>



        <TextView
            android:id="@+id/circle_radius_c_text"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/circle_radius_formula"
            android:layout_marginTop="11dp"
            android:background="@drawable/red_button"
            android:maxLines="1"
            android:text="A"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="15sp" />


        <EditText
            android:id="@+id/circle_radius_c_et"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_below="@id/circle_radius_formula"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/circle_radius_c_text"
            android:background="@drawable/black_button"
            android:ems="6"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:hint="Enter Area"
            android:inputType="numberDecimal"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textColorHint="@color/LightGrey" />

        <Button
            android:id="@+id/circle_radius_calc_button"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_below="@id/circle_radius_c_et"
            android:layout_marginTop="5dp"
            android:background="@drawable/black_button"
            android:text="Calculate"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <TextView

            android:id="@+id/circle_radius_calc_answer_tx"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_below="@+id/circle_radius_calc_button"
            android:layout_marginTop="5dp"
            android:background="@drawable/black_button"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="21sp" />

        <Button
            android:id="@+id/circle_radius_clear_button"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_below="@id/circle_radius_calc_answer_tx"
            android:layout_marginTop="5dp"
            android:background="@drawable/black_button"
            android:text="CLEAR"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/hline_4"
            style="?android:listSeparatorTextViewStyle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/circle_radius_clear_button"
            android:layout_marginTop="5dp" />
    </RelativeLayout>
</ScrollView>





