<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="calcpa.calcsummerproject.Geometry.Pentagon.TypesOfPentagon.RegularPentagon"
    tools:showIn="@layout/activity_regular_pentagon">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/pen_perimeter_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Perimeter"
                android:textColor="@color/Black"
                android:textSize="30sp" />

            <ImageView
                android:id="@+id/pen_perimeter_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pen_perimeter_text"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:src="@drawable/image1" />

            <TextView
                android:id="@+id/pen_perimeter_side_a_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/pen_perimeter_img"
                android:layout_marginTop="40dp"
                android:background="@drawable/red_button"
                android:maxLines="1"
                android:text="a"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/pen_perimeter_side_a_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/pen_perimeter_img"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="40dp"
                android:layout_toRightOf="@+id/pen_perimeter_side_a_text"
                android:background="@drawable/black_button"
                android:ems="6"
                android:hint="Enter value"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textColorHint="@color/LightGrey" />

            <Button
                android:id="@+id/pen_perimeter_calc_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/pen_perimeter_side_a_text"
                android:layout_marginTop="10dp"
                android:background="@drawable/black_button"
                android:text="Calculate"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/pen_perimeter_calc_answer_tx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pen_perimeter_calc_button"
                android:layout_marginTop="10dp"
                android:background="@drawable/black_button"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textSize="18sp" />



            <Button
                android:id="@+id/pen_perimeter_clear_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/pen_perimeter_calc_answer_tx"
                android:layout_marginTop="10dp"
                android:background="@drawable/black_button"
                android:text="CLEAR"
                android:textColor="@color/white"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/hline_1"
                style="?android:listSeparatorTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/pen_perimeter_clear_button"
                android:layout_marginTop="10dp"
                android:textColor="@color/White" />

            <TextView
                android:id="@+id/pen_area_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/hline_1"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="Area"
                android:textSize="30sp" />



            <ImageView
                android:id="@+id/pen_area_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pen_area_text"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:src="@drawable/image1" />

            <TextView
                android:id="@+id/pen_area_side_a_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/pen_area_img"
                android:layout_marginTop="40dp"
                android:background="@drawable/red_button"
                android:maxLines="1"
                android:text="a"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/pen_area_side_a_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/pen_area_img"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="40dp"
                android:layout_toRightOf="@+id/pen_area_side_a_tx"
                android:background="@drawable/black_button"
                android:ems="6"
                android:hint="Enter value"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textColorHint="@color/LightGrey" />

            <Button
                android:id="@+id/pen_area_calc_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/pen_area_side_a_tx"
                android:layout_marginTop="10dp"
                android:background="@drawable/black_button"
                android:text="Calculate"
                android:textColor="@color/white"
                android:textSize="15sp" />



            <TextView
                android:id="@+id/pen_area_calc_answer_tx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pen_area_calc_button"
                android:layout_marginTop="10dp"
                android:background="@drawable/black_button"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <Button
                android:id="@+id/pen_area_clear_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/pen_area_calc_answer_tx"
                android:layout_marginTop="10dp"
                android:background="@drawable/black_button"
                android:text="CLEAR"
                android:textColor="@color/white"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/hline_2"
                style="?android:listSeparatorTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/pen_area_clear_button"
                android:layout_marginTop="10dp"
                android:textColor="@color/White" />



            <TextView
                android:id="@+id/pen_side_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/hline_2"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:text="Side A"
                android:textColor="@color/Black"
                android:textSize="30sp" />


            <ImageView
                android:id="@+id/pen_side_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pen_side_text"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:src="@drawable/image1" />

            <TextView
                android:id="@+id/pen_side_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/pen_side_img"
                android:layout_marginTop="40dp"
                android:background="@drawable/red_button"
                android:maxLines="1"
                android:text="a"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/pen_side_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/pen_side_img"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="40dp"
                android:layout_toRightOf="@+id/pen_side_tx"
                android:background="@drawable/black_button"
                android:ems="6"
                android:hint="Enter value"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textColorHint="@color/LightGrey" />


            <Button
                android:id="@+id/pen_side_calc_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/pen_side_tx"
                android:layout_marginTop="10dp"
                android:background="@drawable/black_button"
                android:text="Calculate"
                android:textColor="@color/white"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/pen_side_calc_answer_tx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pen_side_calc_button"
                android:layout_marginTop="10dp"
                android:background="@drawable/black_button"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textSize="18sp" />


            <Button
                android:id="@+id/pen_side_clear_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/pen_side_calc_answer_tx"
                android:layout_marginTop="10dp"
                android:background="@drawable/black_button"
                android:text="CLEAR"
                android:textColor="@color/white"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/hline_3"
                style="?android:listSeparatorTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/pen_side_clear_button"
                android:layout_marginTop="10dp"
                android:textColor="@color/White" />


        </RelativeLayout>


    </ScrollView>

</RelativeLayout>
 