<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:auto="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_color"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="calcpa.calcsummerproject.Geometry.Triangle.TypesOfTriangle.AcuteTriangle"
    tools:showIn="@layout/activity_acute_triangle">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:clickable="false">


            <TextView
                android:id="@+id/acute_triangle_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:text="Acute Triangle"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <ImageView

                android:id="@+id/acute_triangle_img_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="22dp"
                android:src="@drawable/image1" />

            <TextView
                android:id="@+id/acute_tr_def_str_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="fill_horizontal"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:paddingBottom="2dp"
                android:paddingTop="8dp"
                android:text="@string/def_str" />

            <TextView
                android:id="@+id/acute_triangle_define_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:paddingBottom="8dp"
                android:textColor="@color/DarkRed"
                android:textSize="16sp"
                android:text="@string/acute_triangle_def" />

           <TextView
                android:id="@+id/acute_tr_attr_str"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="fill_horizontal"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:text="@string/attr_str" />


            <TextView
                android:id="@+id/acute_tr_att_1_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:textSize="16sp"
                android:textColor="@color/DarkRed"
                android:text="@string/acute_triangle_attr_1" />


            <TextView
                android:id="@+id/acute_tri_formula_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="fill_horizontal"
                android:padding="2dp"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:textSize="24sp"
                android:textColor="@color/white"
                android:text="@string/formula_str" />

            <io.github.kexanie.library.MathView
                android:id="@+id/acute_triangle_paramter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="fill_horizontal"
                auto:engine="KaTeX">
            </io.github.kexanie.library.MathView>

            <io.github.kexanie.library.MathView
                android:id="@+id/acute_triangle_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                auto:engine="KaTeX">
            </io.github.kexanie.library.MathView>

            <io.github.kexanie.library.MathView
                android:id="@+id/acute_triangle_side_c"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                auto:engine="KaTeX">
            </io.github.kexanie.library.MathView>

            <io.github.kexanie.library.MathView
                android:id="@+id/acute_triangle_side_a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                auto:engine="KaTeX">
            </io.github.kexanie.library.MathView>

            <io.github.kexanie.library.MathView
                android:id="@+id/acute_triangle_side_b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                auto:engine="KaTeX">
            </io.github.kexanie.library.MathView>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
