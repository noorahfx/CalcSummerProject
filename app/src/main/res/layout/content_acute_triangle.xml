                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/acute_tri_perimeter_img"
                android:layout_marginLeft="115dp"
                android:layout_marginTop="40dp"
                android:text="a"
                android:textSize="25sp" />


            <TextView
