<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="calcpa.calcsummerproject.Geometry.Cuboid.Cuboid"
    tools:showIn="@layout/activity_cuboid">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/cuboid_volume_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Volume"
                android:textSize="30sp"
                android:textColor="@color/Black" />



            <ImageView
                android:id="@+id/cuboid_volume_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cuboid_volume_text"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:src="@drawable/image1" />

            <TextView
                android:id="@+id/cuboid_volume_l_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cuboid_volume_img"
                android:layout_marginTop="40dp"
                android:text="L"
                android:background="@drawable/red_button"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/cuboid_volume_l_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cuboid_volume_img"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="40dp"
                android:layout_toRightOf="@+id/cuboid_volume_l_text"
                android:background="@drawable/black_button"
                android:ems="6"
                android:hint="Enter value"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textColorHint="@color/LightGrey"/>

            <TextView
                android:id="@+id/cuboid_volume_w_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cuboid_volume_l_text"
                android:layout_marginTop="10dp"
                android:text="W"
                android:background="@drawable/red_button"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textSize="18sp" />


            <EditText
                android:id="@+id/cuboid_volume_w_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cuboid_volume_l_et"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/cuboid_volume_w_text"
                android:background="@drawable/black_button"
                android:ems="6"
                android:hint="Enter value"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textColorHint="@color/LightGrey"/>

            <TextView
                android:id="@+id/cuboid_volume_h_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cuboid_volume_w_text"
                android:layout_marginTop="10dp"
                android:text="H"
                android:background="@drawable/red_button"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/cuboid_volume_h_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cuboid_volume_w_et"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/cuboid_volume_w_text"
                android:background="@drawable/black_button"
                android:ems="6"
                android:hint="Enter value"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textColorHint="@color/LightGrey"/>

            <Button
                android:id="@+id/cuboid_volume_calc_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cuboid_volume_h_text"
                android:layout_marginTop="10dp"
                android:background="@drawable/black_button"
                android:text="Calculate"
                android:textColor="@color/white"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/cuboid_volume_calc_answer_tx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cuboid_volume_calc_button"
                android:layout_marginTop="10dp"
                android:background="@drawable/black_button"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <Button
                android:id="@+id/cuboid_volume_clear_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cuboid_volume_calc_answer_tx"
                android:layout_marginTop="10dp"
                android:background="@drawable/black_button"
                android:text="CLEAR"
                android:textColor="@color/white"
                android:textSize="15sp" />



            <TextView
                android:id="@+id/hline_1"
                style="?android:listSeparatorTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/White"
                android:layout_marginTop="10dp"
                android:layout_below="@id/cuboid_volume_clear_button"/>


            <TextView
                android:id="@+id/cuboid_area_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/hline_1"
                android:gravity="center"
                android:text="Area"
                android:textSize="30sp"
                android:layout_marginTop="30dp"
                android:textColor="@color/Black"/>



            <ImageView
