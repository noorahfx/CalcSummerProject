<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
     android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cfcfc4"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="calcpa.calcsummerproject.Geometry.Cuboid.Cuboid"
    tools:showIn="@layout/activity_cuboid"
    android:scrollbarThumbVertical="@drawable/scrollbar">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/cuboid_volume_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="@string/volume"
                android:textSize="30sp" />


            <ImageView
                android:id="@+id/cuboid_volume_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cuboid_volume_text"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:src="@drawable/cuboid_xxxhdpi"
                android:contentDescription="@string/cuboid_image"/>

            <ImageView
                android:id="@+id/cuboid_volume_formula"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cuboid_volume_img"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:src="@drawable/cuboid_volume_xxxhdpi"
                android:contentDescription="@string/cuboid_volume_formula"/>



            <TextView
                android:id="@+id/cuboid_volume_l_text"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_below="@id/cuboid_volume_formula"
                android:layout_marginTop="11dp"
                android:background="@drawable/red_button"
                android:maxLines="1"
                android:text="@string/letter_l"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/cuboid_volume_l_et"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_below="@+id/cuboid_volume_formula"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/cuboid_volume_l_text"
                android:layout_toEndOf="@+id/cuboid_volume_l_text"
                android:background="@drawable/black_button"
                android:ems="6"
                android:hint="@string/length"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textColorHint="@color/LightGrey" />

            <TextView
                android:id="@+id/cuboid_volume_w_text"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_below="@id/cuboid_volume_l_text"
                android:layout_marginTop="7dp"
                android:background="@drawable/red_button"
                android:maxLines="1"
                android:text="@string/letter_w"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="15sp" />


            <EditText
                android:id="@+id/cuboid_volume_w_et"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_below="@+id/cuboid_volume_l_et"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/cuboid_volume_w_text"
                android:layout_toEndOf="@+id/cuboid_volume_w_text"
                android:background="@drawable/black_button"
                android:ems="6"
                android:hint="@string/width"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textColorHint="@color/LightGrey" />


            <TextView
                android:id="@+id/cuboid_volume_h_text"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_below="@id/cuboid_volume_w_text"
                android:layout_marginTop="7dp"
                android:background="@drawable/red_button"
                android:maxLines="1"
                android:text="@string/letter_h"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/cuboid_volume_h_et"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_below="@+id/cuboid_volume_w_et"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/cuboid_volume_w_text"
                android:layout_toEndOf="@+id/cuboid_volume_w_text"
                android:background="@drawable/black_button"
                android:ems="6"
                android:hint="@string/height"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textColorHint="@color/LightGrey" />



            <Button
                android:id="@+id/cuboid_volume_calc_button"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_below="@id/cuboid_volume_h_et"
                android:layout_marginTop="5dp"
                android:background="@drawable/black_button"
                android:gravity="center"
                android:text="@string/calculate"
                android:textColor="@color/white"
                android:textSize="13sp" />


            <TextView
                android:id="@+id/cuboid_volume_calc_answer_tx"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_below="@+id/cuboid_volume_calc_button"
                android:layout_marginTop="5dp"
                android:background="@drawable/black_button"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="21sp" />

            <Button
                android:id="@+id/cuboid_volume_clear_button"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_below="@id/cuboid_volume_calc_answer_tx"
                android:layout_marginTop="5dp"
                android:background="@drawable/black_button"
                android:text="@string/clear"
                android:textColor="@color/white"
                android:textSize="13sp" />



            <View
                android:id="@+id/hline_1"
                android:layout_width="fill_parent"
                android:layout_height="5dp"
                android:background="@drawable/list_divider"
                android:layout_below="@id/cuboid_volume_clear_button"
                android:layout_marginTop="35dp" />


            <TextView
                android:id="@+id/cuboid_area_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/hline_1"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="@string/area"
                android:textSize="30sp" />



            <ImageView
                android:id="@+id/cuboid_area_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cuboid_area_text"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:src="@drawable/cuboid_xxxhdpi"
                android:contentDescription="@string/cuboid_image"/>

            <ImageView
                android:id="@+id/cuboid_area_formula"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cuboid_area_img"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:src="@drawable/cuboid_area_xxxhdpi"
                android:contentDescription="@string/cuboid_area_formula"/>



            <TextView
                android:id="@+id/cuboid_area_l_text"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_below="@id/cuboid_area_formula"
                android:layout_marginTop="11dp"
                android:background="@drawable/red_button"
                android:maxLines="1"
                android:text="@string/letter_l"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="15sp" />


            <EditText
                android:id="@+id/cuboid_area_l_et"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_below="@+id/cuboid_area_formula"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/cuboid_area_l_text"
                android:layout_toEndOf="@+id/cuboid_area_l_text"
                android:background="@drawable/black_button"
                android:ems="6"
                android:hint="@string/length"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textColorHint="@color/LightGrey" />


            <TextView
                android:id="@+id/cuboid_area_w_text"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_below="@id/cuboid_area_l_text"
                android:layout_marginTop="7dp"
                android:background="@drawable/red_button"
                android:maxLines="1"
                android:text="@string/letter_w"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/cuboid_area_w_et"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_below="@+id/cuboid_area_l_et"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/cuboid_area_w_text"
                android:layout_toEndOf="@+id/cuboid_area_w_text"
                android:background="@drawable/black_button"
                android:ems="6"
                android:hint="@string/width"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textColorHint="@color/LightGrey" />

            <TextView
                android:id="@+id/cuboid_area_h_text"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_below="@id/cuboid_area_w_text"
                android:layout_marginTop="7dp"
                android:background="@drawable/red_button"
                android:maxLines="1"
                android:text="@string/letter_h"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/cuboid_area_h_et"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_below="@+id/cuboid_area_w_et"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/cuboid_area_w_text"
                android:layout_toEndOf="@+id/cuboid_area_w_text"
                android:background="@drawable/black_button"
                android:ems="6"
                android:hint="@string/height"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textColorHint="@color/LightGrey" />



            <Button
                android:id="@+id/cuboid_area_calc_button"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_below="@id/cuboid_area_h_et"
                android:layout_marginTop="5dp"
                android:background="@drawable/black_button"
                android:gravity="center"
                android:text="@string/calculate"
                android:textColor="@color/white"
                android:textSize="13sp" />


            <TextView
                android:id="@+id/cuboid_area_calc_answer_tx"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_below="@+id/cuboid_area_calc_button"
                android:layout_marginTop="5dp"
                android:background="@drawable/black_button"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textSize="21sp" />

            <Button
                android:id="@+id/cuboid_area_clear_button"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_below="@id/cuboid_area_calc_answer_tx"
                android:layout_marginTop="5dp"
                android:background="@drawable/black_button"
                android:text="@string/clear"
                android:textColor="@color/white"
                android:textSize="13sp" />



             <View
                android:id="@+id/hline_2"
                android:layout_width="fill_parent"
                android:layout_height="5dp"
                android:background="@drawable/list_divider"
                android:layout_below="@id/cuboid_area_clear_button"
                android:layout_marginTop="35dp" />




        </RelativeLayout>
    </ScrollView>



