            android:layout_height="42dp"
            android:layout_below="@id/rhombus_area_calc_answer_tx"
            android:layout_marginTop="5dp"
            android:background="@drawable/black_button"
            android:text="CLEAR"
            android:textColor="@color/white"
            android:textSize="13sp" />


        <TextView
