<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Geometry.Parallelogram.Parallelogram"
    tools:showIn="@layout/activity_parallelogram">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/parallelogram_perimeter_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="Perimeter"
                android:textSize="30sp" />

            <ImageView
                android:id="@+id/parallelogram_perimeter_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/parallelogram_perimeter_text"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:src="@drawable/image1" />

            <TextView
                android:id="@+id/parallelogram_perimeter_base_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/parallelogram_perimeter_img"
                android:layout_marginLeft="115dp"
                android:layout_marginTop="40dp"
                android:text="b"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/parallelogram_perimeter_base_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/parallelogram_perimeter_img"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:layout_toRightOf="@+id/parallelogram_perimeter_base_text"
                android:ems="5" />

            <TextView
                android:id="@+id/parallelogram_perimeter_area_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/parallelogram_perimeter_base_text"
                android:layout_marginLeft="115dp"
                android:layout_marginTop="32dp"
                android:text="h"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/parallelogram_perimeter_area_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/parallelogram_perimeter_base_et"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/parallelogram_perimeter_area_text"
                android:ems="5" />

            <Button
                android:id="@+id/parallelogram_perimeter_calc_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/parallelogram_perimeter_area_text"
                android:layout_marginTop="10dp"
                android:text="Calculate" />

            <TextView
                android:id="@+id/parallelogram_perimeter_calc_answer_tx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/parallelogram_perimeter_calc_button"
                android:layout_marginTop="10dp"
                android:gravity="center"
                 android:textColor="@color/red"
                android:textSize="20sp" />


            <TextView
                android:id="@+id/parallelogram_area_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/parallelogram_perimeter_calc_answer_tx"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="Area"
                android:textSize="30sp" />

            <ImageView
                android:id="@+id/parallelogram_area_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/parallelogram_area_text"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:src="@drawable/image1" />

            <TextView
                android:id="@+id/parallelogram_area_base_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/parallelogram_area_img"
                android:layout_marginLeft="115dp"
                android:layout_marginTop="40dp"
                android:text="b"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/parallelogram_area_base_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/parallelogram_area_img"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:layout_toRightOf="@+id/parallelogram_area_base_text"
                android:ems="5" />

            <TextView
                android:id="@+id/parallelogram_area_height_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/parallelogram_area_base_text"
                android:layout_marginLeft="115dp"
                android:layout_marginTop="32dp"
                android:text="h"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/parallelogram_area_height_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/parallelogram_area_base_et"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/parallelogram_area_height_text"
                android:ems="5" />

            <Button
                android:id="@+id/parallelogram_area_calc_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/parallelogram_area_height_text"
                android:layout_marginTop="10dp"
                android:text="Calculate" />

            <TextView
                android:id="@+id/parallelogram_area_calc_answer_tx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/parallelogram_area_calc_button"
                android:layout_marginTop="10dp"
                android:gravity="center"
                 android:textColor="@color/red"
                android:textSize="20sp" />


            <TextView
                android:id="@+id/parallelogram_base_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/parallelogram_area_calc_answer_tx"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="Base"
                android:textSize="30sp" />

            <ImageView
                android:id="@+id/parallelogram_base_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/parallelogram_base_text"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:src="@drawable/image1" />

            <TextView
                android:id="@+id/parallelogram_base_side_a_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/parallelogram_base_img"
                android:layout_marginLeft="115dp"
                android:layout_marginTop="40dp"
                android:text="a"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/parallelogram_base_side_a_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/parallelogram_base_img"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:layout_toRightOf="@+id/parallelogram_base_side_a_text"
                android:ems="5" />

            <TextView
                android:id="@+id/parallelogram_base_perimeter_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/parallelogram_base_perimeter_text"
                android:layout_marginLeft="115dp"
                android:layout_marginTop="32dp"
                android:text="P"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/parallelogram_base_perimeter_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/parallelogram_base_side_a_et"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/parallelogram_base_perimeter_text"
                android:ems="5" />

            <Button
                android:id="@+id/parallelogram_base_calc_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/parallelogram_base_perimeter_text"
                android:layout_marginTop="10dp"
                android:text="Calculate" />

            <TextView
                android:id="@+id/parallelogram_base_calc_answer_tx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/parallelogram_base_calc_button"
                android:layout_marginTop="10dp"
                android:gravity="center"
                 android:textColor="@color/red"
                android:textSize="20sp" />


            <TextView
                android:id="@+id/parallelogram_height_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/parallelogram_base_calc_answer_tx"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="Height"
                android:textSize="30sp" />

            <ImageView
                android:id="@+id/parallelogram_height_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/parallelogram_height_text"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:src="@drawable/image1" />

            <TextView
                android:id="@+id/parallelogram_height_base_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/parallelogram_height_img"
                android:layout_marginLeft="115dp"
                android:layout_marginTop="40dp"
                android:text="b"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/parallelogram_height_base_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/parallelogram_height_img"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:layout_toRightOf="@+id/parallelogram_height_base_text"
                android:ems="5" />

            <TextView
                android:id="@+id/parallelogram_height_area_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/parallelogram_height_base_text"
                android:layout_marginLeft="115dp"
                android:layout_marginTop="32dp"
                android:text="A"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/parallelogram_height_area_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/parallelogram_height_base_et"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/parallelogram_height_area_text"
                android:ems="5" />

            <Button
                android:id="@+id/parallelogram_height_calc_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/parallelogram_height_area_text"
                android:layout_marginTop="10dp"
                android:text="Calculate" />

            <TextView
                android:id="@+id/parallelogram_height_calc_answer_tx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/parallelogram_height_calc_button"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Hello"
                android:textColor="@color/red"
                android:textSize="20sp" />


            <TextView
                android:id="@+id/parallelogram_side_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/parallelogram_height_calc_answer_tx"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="Sides"
                android:textSize="30sp" />

            <ImageView
                android:id="@+id/parallelogram_side_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/parallelogram_side_text"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:src="@drawable/image1" />

            <TextView
                android:id="@+id/parallelogram_side_base_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/parallelogram_side_img"
                android:layout_marginLeft="115dp"
                android:layout_marginTop="40dp"
                android:text="b"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/parallelogram_side_base_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/parallelogram_side_img"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:layout_toRightOf="@+id/parallelogram_side_base_text"
                android:ems="5" />

            <TextView
                android:id="@+id/parallelogram_side_perimeter_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/parallelogram_side_base_text"
                android:layout_marginLeft="115dp"
                android:layout_marginTop="32dp"
                android:text="P"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/parallelogram_side_perimeter_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/parallelogram_side_base_et"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/parallelogram_side_perimeter_text"
                android:ems="5" />

            <Button
                android:id="@+id/parallelogram_side_calc_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/parallelogram_side_perimeter_text"
                android:layout_marginTop="10dp"
                android:text="Calculate" />

            <TextView
                android:id="@+id/parallelogram_side_calc_answer_tx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/parallelogram_side_calc_button"
                android:layout_marginTop="10dp"
                android:gravity="center"
                 android:textColor="@color/red"
                android:textSize="20sp" />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
